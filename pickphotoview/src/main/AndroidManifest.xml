<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.werb.pickphotoview">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name="com.werb.pickphotoview.activity.PickPhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeBottom" />

        <activity
            android:name=".activity.PickListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeRight" />

        <activity
            android:name=".activity.PickPhotoPreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeRight" />

        <!--添加pickphotoActivity，用于管理fragment-->
        <activity
            android:name=".activity.PickParentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PickAppThemeRight" />
    </application>

</manifest>
